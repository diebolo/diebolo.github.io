{% assign sorted_projects = site.projects | sort: "importance"%}

<div class="row row-cols-1 row-cols-md-2">
{% for project in sorted_projects | limit: 8 %}
  <div class="col">
    <a href="{% if project.redirect %}{{ project.redirect }}{% else %}{{ project.url | relative_url }}{% endif %}" class="d-flex flex-column h-100">
      <div class="card mb-3 hoverable flex-grow-1">
        <div class="row g-0">
          <div class="col-md-5">
          {% if project.img %}
            {%
              include figure.liquid
              loading="eager"
              path=project.img
              sizes = "300px"
              alt="project thumbnail"
              class="card-img-left"
            %}
          {% endif %}
          </div>
          <div class="col-md-7">
            <div class="card-body p-3">
              <h6 class="card-title">{{ project.title }}</h2>
              <p class="card-text">{{ project.description }}</p>
              
            </div>
          </div>
        </div>
      </div>
    </a>
  </div>

{% endfor %}
</div>